#include <iostream>
#include <fstream>
#include <string>
using namespace std;

class File {
	string path;
protected:
	string data;
public:
	string load();
	File(string p) { path = p; }
	void print() { cout << data; }
};

string File::load(string p) {
	string output = "";
	string line;
	int i = 0;
	ifstream input (p);
	if(!input.is_open()) {
		cout << "Failed to open file " << path;
		return "";
	}

	while(! input.eof()) {
		if(i != 0) {
			getline(input, line);
			cout << line;
			output += line;
		}
		i++;
	}

	input.close();
	return output;
}


int main() {

	File blah("../fasta_data/M90848dentist.fasta");
	blah.load("../fasta_data/M90848dentist.fasta");
	blah.print();

	return 0;
}
