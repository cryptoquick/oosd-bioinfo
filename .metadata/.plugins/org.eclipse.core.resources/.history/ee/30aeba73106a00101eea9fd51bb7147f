// Description : File Class
//				Takes string of file path as parameter
//				Extracts DNA sequence from file and saves as data attribute
//============================================================================

#include <iostream>
#include <fstream>
#include <string>
using namespace std;

class File {
	string path;
protected:
	string data;
public:
	void load();
	File(string p) { path = p; load();}
	void print() { cout << data; }
};

void File::load() {
	string output = "";
	string line;
	int i = 0;
	const *char blah = path;
	ifstream input (blah);
	if(!input.is_open()) {
		cout << "Failed to open file " << path;
		return;
	}

	while(! input.eof()) {
		getline(input, line);
		if(i != 0) {
			output += line;
		}
		i++;
	}

	input.close();
	data = output;
}


int main() {

	File blah("../fasta_data/M90848dentist.fasta");
	blah.print();

	return 0;
}
